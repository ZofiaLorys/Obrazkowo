<div class="panel panel-default">
  <div class="panel-heading"><h1>Pins</h1></div>
  <div class="panel-body">
<p id="notice"><%= notice %></p>


<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
        <div class="panel-body">
          <%= pin.description %><br/>
          <br/><strong><%= pin.user.name if pin.user %></strong><br/>
        </div>
        <% if pin.user == current_user %>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_pin_path(pin) %><br/>
          <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

  </div>
  <div class="panel-footer"></div>
</div>